<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/addPropiedad"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|right"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/txtCasa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center|center_vertical"
            android:text="Propiedad"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnAddPropiedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right|end"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            app:backgroundTint="@color/colorPrimaryDark"
            app:fabSize="auto"
            app:srcCompat="@drawable/iconhouse" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addHipoteca"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|right"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/txtHipoteca"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center|center_vertical"
            android:text="Hipoteca"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnAddHipoteca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right|end"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            app:backgroundTint="@color/colorPrimaryDark"
            app:fabSize="auto"
            app:srcCompat="@drawable/iconhipoteca" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addPagare"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|right"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/txtPagare"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center|center_vertical"
            android:text="Pagare"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnAddPagare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right|end"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            app:backgroundTint="@color/colorPrimaryDark"
            app:fabSize="auto"
            app:srcCompat="@drawable/icondebt" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addGarantia"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_gravity="bottom|right"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/txtGarantia"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center|center_vertical"
            android:text="Garantia"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnAddGarantia"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|right|end"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            app:backgroundTint="@color/colorPrimaryDark"
            app:fabSize="auto"
            app:srcCompat="@drawable/iconwarranty" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:src="@drawable/iconadd"
        app:backgroundTint="@color/colorPrimary" />

</LinearLayout>